#!/bin/bash -ex

shhh() {
    set +x
    "$@"
    set -x
}

try() {
    set +e
    "$@"
    set -e
}

main() {
    local git_sha="$(git rev-parse HEAD)"
    local image_name="quay.io/stsatlas/prism-kafka-connect:$git_sha"

    docker build -t "$image_name" .
    shhh docker login -u="$QUAY_USERNAME" -p="$QUAY_PASSWORD" quay.io
    docker push "$image_name"
}

main "$@"
